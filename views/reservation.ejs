<!-- views/reservation.ejs -->
<%- include('partials/header') %>

<div class="container my-4">
  <h2><%= classroom.name %> の予約</h2>
  <p class="mb-0 search-conditions">
    <span class="condition-label">号館:</span> 
    <span class="condition-value"><%= building %></span>, 
    <span class="condition-label">階:</span> 
    <span class="condition-value"><%= floor %></span>, 
    <span class="condition-label">曜日:</span> 
    <span class="condition-value"><%= dayOfWeek %></span>, 
    <span class="condition-label">時限:</span> 
    <span class="condition-value"><%= period %></span>
  </p>
  <form action="/reservation" method="POST">
    <input type="hidden" name="classroomId" value="<%= classroom._id %>">
    <input type="hidden" name="building" value="<%= building %>"> <!-- 追加 -->
    <input type="hidden" name="floor" value="<%= floor %>"> <!-- 追加 -->
    <input type="hidden" name="dayOfWeek" value="<%= dayOfWeek %>">
    <input type="hidden" name="period" value="<%= period %>">

    <div class="mb-3">
      <label for="reservedBy" class="form-label p-2">予約者名</label>
      <input type="text" class="form-control" id="reservedBy" name="reservedBy" required>
    </div>

    <!-- ボタンを横並びに配置するためのFlexコンテナ -->
    <div class="d-flex flex-column flex-sm-row gap-2">
      <button type="submit" class="btn btn-primary">予約を確定する</button>
      <a href="/search?building=<%= encodeURIComponent(building) %>&floor=<%= encodeURIComponent(floorNumber) %>&dayOfWeek=<%= encodeURIComponent(dayOfWeek) %>&period=<%= encodeURIComponent(period) %>" class="btn btn-secondary">キャンセル</a>
    </div>
  </form>
</div>

<!-- Bootstrap JS (必要であれば) -->
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
</script>
<%- include('partials/footer') %>
