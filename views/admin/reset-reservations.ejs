<%- include('../partials/header') %>
        <h2>予約リストのリセット</h2>

        <div class="alert alert-warning" role="alert">
            <strong>注意:</strong> この操作により全ての予約が削除されます。実行する場合は下記の内容を確認してください。
        </div>

        <h4>リセット前の予約一覧</h4>
        <% if (currentReservations.length > 0) { %>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>教室</th>
                        <th>曜日</th>
                        <th>時限</th>
                        <th>予約者</th>
                        <!-- 必要に応じて他のフィールドを追加 -->
                    </tr>
                </thead>
                <tbody>
                    <% currentReservations.forEach(reservation => { %>
                        <tr>
                            <td><%= reservation._id %></td>
                            <td><%= reservation.classroom.name %></td>
                            <td><%= reservation.dayOfWeek %></td>
                            <td><%= reservation.period %></td>
                            <td><%= reservation.reservedBy || '未予約' %></td>
                            <!-- 必要に応じて他のフィールドを追加 -->
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>リセット前の予約は存在しませんでした。</p>
        <% } %>

        <h4>リセット結果</h4>
        <div class="alert alert-success" role="alert">
            <p>予約リストがリセットされました。</p>
            <p>削除された予約の数: <strong><%= deletedCount %></strong></p>
        </div>

        <h4>リセット後の予約一覧</h4>
        <% if (remainingReservations.length > 0) { %>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>教室</th>
                        <th>曜日</th>
                        <th>時限</th>
                        <th>予約者</th>
                        <!-- 必要に応じて他のフィールドを追加 -->
                    </tr>
                </thead>
                <tbody>
                    <% remainingReservations.forEach(reservation => { %>
                        <tr>
                            <td><%= reservation._id %></td>
                            <td><%= reservation.classroom.name %></td>
                            <td><%= reservation.dayOfWeek %></td>
                            <td><%= reservation.period %></td>
                            <td><%= reservation.reservedBy || '未予約' %></td>
                            <!-- 必要に応じて他のフィールドを追加 -->
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>リセット後の予約は存在しません。</p>
        <% } %>

        <a href="/" class="btn btn-primary mt-3">ホームに戻る</a>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<%- include('../partials/footer') %>
